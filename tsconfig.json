{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "./lib",
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["lib/**/*", "*.md", "../index.ts"],
  "exclude": ["node_modules", "dist"]
}
